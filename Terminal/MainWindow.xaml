<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Terminal" x:Class="Terminal.MainWindow"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Menu VerticalAlignment="Top" Height="24">
            <MenuItem Header="File" Height="24" Padding="16,0">
                <MenuItem Header="DEBUG" Click="MenuItem_Debug_Click" />
            </MenuItem>
            <MenuItem Header="History" Height="24" Padding="16,0">
                <MenuItem Header="192.168.192.200" Click="MenuItem_Debug_Click" />
            </MenuItem>
        </Menu>
        <local:VideoTerminal x:Name="VideoTerminal_Main" Focusable="True" PreviewTextInput="VideoTerminal_Main_PreviewTextInput" PreviewKeyDown="VideoTerminal_Main_PreviewKeyDown" Margin="0,24,0,0"/>
    </Grid>

</Window>
